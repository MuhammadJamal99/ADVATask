
@{
    ViewData["Title"] = "Departments";
}
<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="#">Home</a></li>
    <li class="breadcrumb-item active" aria-current="page"><a href="/Department/Departments"></a></li>
  </ol>
</nav>
<div class="container">
    <div class="row text-center">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 text-center my-4">
            <button type="button" class="btn btn-sm btn-primary col-lg-4 Add-item-modal-btn" data-toggle="modal" data-target="#Add-item-modal">
                <i class="fas fa-plus"></i>&ensp;Add Department
            </button>
        </div>
    </div>
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 table-responsive" id="TableWrapper">
    </div>
</div>
<div class="modal fade" id="Add-item-modal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Add Department</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            </div>
            <div class="modal-body" id="add-new-item-modal-body">
                <div class="form-group row  col-1g-12 col-md-12 col-sm-12">
                    <label class="col-xl-4 col-lg-4 col-form-label" for="Name">Name</label>
                    <div class="col-lg-8 col-xl-8">
                        <input type="text" class="form-control new-item-data" id="Name"/>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary save-new-item-btn">Add Department</button>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="Update-item-modal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Update Department:</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            </div>
            <div class="modal-body" id="update-item-modal-body">
                <div class="form-group row  col-1g-12 col-md-12 col-sm-12">
                    <label class="col-xl-4 col-lg-4 col-form-label" for="Name">Name</label>
                    <div class="col-lg-8 col-xl-8">
                        <input type="text" class="form-control update-item-data" id="Name" value=""/>
                        <input type="hidden" class="form-control update-item-data" id="DepartmentID" value=""/>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary update-Department-item-btn">Save Changes</button>
            </div>
        </div>
    </div>
</div>
<script src="~/assets/Js/jquery.min.js"></script>
<script src="~/assets/Js/Departments.js"></script>
