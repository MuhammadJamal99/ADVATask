@model ADVATask.ViewModels.EmployeeVM.EmployeeVM
<div class="form-group row  col-1g-12 col-md-12 col-sm-12">
    <label class="col-xl-4 col-lg-4 col-form-label" for="Name">Name:</label>
    <div class="col-lg-8 col-xl-8">
        <input type="text" class="form-control update-item-data" id="Name" value="@Model.Name"/>
        <input type="hidden" class="form-control update-item-data" id="EmployeeID" value="@Model.EmployeeID"/>
    </div>
</div>
<div class="form-group row  col-1g-12 col-md-12 col-sm-12">
    <label class="col-xl-4 col-lg-4 col-form-label" for="Salary">Salary:</label>
    <div class="col-lg-8 col-xl-8">
        <input type="number" class="form-control update-item-data" id="Salary" oninput="this.value = this.value.replace(/[^0-9.]/g, '').replace(/(\..*?)\..*/g, '$1');" value="@Model.Salary"/>
    </div>
</div>
<div class="form-group row  col-1g-12 col-md-12 col-sm-12">
    <label class="col-xl-4 col-lg-4 col-form-label" for="DepartmentID">Department:</label>
    <div class="col-lg-8 col-xl-8">
         @Html.DropDownListFor(ModelItem => ModelItem.DepartmentID, Model.Departments.ToList() , htmlAttributes: new { id = "DepartmentID", @class = "form-control update-item-data"})
    </div>
</div>
