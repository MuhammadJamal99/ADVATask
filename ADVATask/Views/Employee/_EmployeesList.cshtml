@model IEnumerable<ADVATask.ViewModels.EmployeeVM.EmployeeVM>
@{
    int SerialNum = 0;
}
<table class="table table-sm table-hover table-bordered cell-border compact text-center">
    <thead>
        <tr><th scope="col" colspan="6" style="font-weight:bold; font-size:1.5rem;">Employees</th></tr>
        <tr>
            <th scope="col">#</th>
            <th scope="col" style="white-space:nowrap">Name</th>
            <th scope="col" style="white-space:nowrap">Salary</th>
            <th scope="col" style="white-space:nowrap">Manger</th>
            <th scope="col">Department</th>
            <th scope="col" style="width:1px; white-space:nowrap">Actions</th>
        </tr>
    </thead>
    <tbody id="employee-list">
        @if (Model != null && Model.Count() > 0)
        {
            @foreach (var Item in Model)
            {
                SerialNum = SerialNum + 1;
                <tr id="Employee-@Item.EmployeeID">
                    <td>
                        @SerialNum
                    </td>
                    <td>@Item.Name</td>
                    <td>
                        @Item.Salary
                    </td>
                    <td>
                        @Item.EmployeeManger
                    </td>
                    <td>
                        @Item.EmployeeDepartment
                    </td>
                    <td>
                        <div class="d-flex justify-content-center align-items-center">
                            <button class="btn btn-icon btn-outline-hover-brand btn-sm btn-font-brand edit-item"
                                employee-id ="@Item.EmployeeID"
                                employee-name="@Item.Name"

                            >
                                <i class="fa fa-edit"></i>
                            </button>
                            <button class="btn btn-clean btn-md btn-icon-md btn-icon TrashIcon ActionBtn delete-item"
                                id="TrashBtn"
                                employee-id ="@Item.EmployeeID"
                            >
                                <i class="fas fa-trash"></i>
                            </button>
                        </div>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr><td colspan="6" align="center" style="color:gray;font-size:2em">None</td></tr>
        }
    </tbody>
</table>